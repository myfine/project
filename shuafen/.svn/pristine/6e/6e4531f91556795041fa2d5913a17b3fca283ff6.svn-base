/**
 * qq登陆callback
 **/
function qqlogincallback(){
	include_once( './qqlogin/API/qqConnectAPI.php');
	$qc = new QC();
	$access_token = $qc->qq_callback();
	$openid = $qc->get_openid();
	$qc = new QC($access_token,$openid);
	$user = $qc->get_user_info();
	$user['openid'] = $openid;
	return $user;
}

/**
