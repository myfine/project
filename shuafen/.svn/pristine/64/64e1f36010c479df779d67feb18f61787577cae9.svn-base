<body class="zhi  no-auth">

<div class="index-main">
<div class="index-main-body">
<div class="index-header">

<img src="__TMPL__/Public/image/icon.png" width="150" height="150" />
</div>

<div class="desk-front sign-flow clearfix sign-flow-simple">

<div class="index-tab-navs">
<if condition="$Think.get.type eq 1">
	<div class="navs-slider" data-active-index="0">
	<a href="__URL__/login/type/1" style="color:#FF764B">注册</a>
	<a href="__URL__/login/type/2" >登录</a>
	<span class="navs-slider-bar" style="background:#FF764B"></span>
	</div>
<else/>
	<div class="navs-slider" data-active-index="1">
	<a href="__URL__/login/type/1" >注册</a>
	<a href="__URL__/login/type/2" style="color:#FF764B">登录</a>
	<span class="navs-slider-bar" style="background:#FF764B"></span>
	</div>
</if>


</div>

<if condition="$Think.get.type eq 1">

	<!-- 注册 -->
	<div class="view view-signup selected" data-za-module="SignUpForm" style="display: block;">
	<form class="zu-side-login-box" action="__URL__/registerHandle" id="regiser" autocomplete="off" method="POST" >
	<div class="group-inputs">
	<div class="name input-wrapper">
	<input required="" type="text" id="nickname" name="nickname" placeholder="昵称">
	</div>
	<div class="input-wrapper">
	<input required="" type="text" id="username" class="account" name="username" placeholder="手机号">
	</div>
	<div class="input-wrapper">
	<input required="" type="text" id="yzm" name="yzm" placeholder="验证码" style="width:190px;">
	<button class="sign-button submit code_ext" type="button" style="width:100px;float:right;clear:none;margin-top:3px;margin-right:2px;background:#FF764B">获取验证码</button>
	</div>
	<div class="input-wrapper">
	<input required="" id="password" type="password" name="password" placeholder="密码（不少于 6 位）" autocomplete="off">
	</div>
	
	</div>
	<div class="button-wrapper command">
	<button class="sign-button submit" type="submit" style="background:#FF764B" onclick="register()">注册</button>
	</div>
	</form>
	
	<p class="agreement-tip">点击「注册」按钮，即代表你同意<a href="#" target="_blank">《立言协议》</a></p>
	
	<div class="QRCode" style="display:none">
	<button class="QRCode-toggleButton">
	<span class="sprite-global-icon-qrcode"></span>
	<span class="QRCode-toggleButtonText">下载立言 App</span>
	</button>
	<div class="QRCode-card">
	<div class="QRCode-image"></div>
	<div class="sprite-index-icon-arrow"></div>
	</div>
	</div>
	</div>
	<script>
	var loading=0;
	
	function register(){
	  if(loading){
	    return false;
	  }
	  loading=1;
	   $('#regiser').ajaxForm({
	        beforeSubmit:  checkForm,// pre-submit callback
	        success:       complete,// post-submit callback
	        dataType: 'json'
	   });
	   
	    function checkForm(){
	    	 if(!$.trim ( $('#nickname').val() )){
	 	        alert('请填写昵称');
	 	        return false;
	 	      }     

		      if(!$.trim ( $('#username').val() )){
		        alert('请填写手机号');
		        return false;
		      }     

		       if(!$.trim ( $('#password').val() )){
		        alert('请填写密码');
		        return false;
		      }

	    }
	    
	    function complete(d){
	      console.log(d);
	        if (!d.error){
	          window.location.href="__GROUP__/Index/index";
	        }else{
	          alert(d.error);
	          loading=0;
	        }
	    }
	}
	
	speed=60;
	
	function yzm(){
        params = {};
	    params.phonenum = $.trim ( $('#username').val() );
	    var url = '__URL__/sms';
	    $.post(url, params, function(d){
	        if(d.error == ""){
	        	 $(".code_ext").attr("disabled","disabled");
	             t1 = setInterval(tip, 1000);
	        }else{
	            alert(d.error);
	        }
	    }, 'json');
	}
	$(".code_ext").on("click",yzm);
	function tip() {  
        speed--;  
        if (speed<0) {
            speed=60;
            clearInterval(t1);
            $(".code_ext").on("click",yzm);
            $(".code_ext").text("获取验证码"); 
            $(".code_ext").removeAttr("disabled");
        }else{
        	$(".code_ext").text(speed+'秒'); 
        } 
    }
	</script>
<else/>
<!-- 登录 -->
	<div class="view view-signup selected" data-za-module="SignUpForm" style="display: block;">
	<form id="login" method="POST" action="__URL__/loginHandle">
	<div class="group-inputs">
	
	<div class="account input-wrapper">
	
	<input type="text" id="username" name="username" aria-label="手机号" placeholder="手机号" required="">
	</div>
	<div class="verification input-wrapper">
		<input type="password" id="password" name="password" aria-label="密码" placeholder="密码" required="">
	</div>
	
	</div>
	<div class="button-wrapper command">
		<button class="sign-button submit" style="background:#FF764B" type="submit" onclick="login()">登录</button>
	</div>
	
	<div class="social-signup-wrapper" data-za-module="SNSSignIn">
	<span class="name js-toggle-sns-buttons">社交帐号登录 : </span>
		<span>
			<a title="微信登录" class="js-bindwechat" href="__GROUP__/Login/wxLogin"><i class="sprite-index-icon-wechat"></i></a>
			<a title="微博登录" class="js-bindweibo" href="{$weibourl}"><i class="sprite-index-icon-weibo"></i></a>
			<a title="QQ登录" class="js-bindqq" href="__URL__/qqlogin"><i class="sprite-index-icon-qq"></i></a></span>
	</form>
	</div>

	<script>
	var conn = new WebIM.connection({
	    https: WebIM.config.https,
	    url: WebIM.config.xmppURL,
	    isAutoLogin: WebIM.config.isAutoLogin,
	    isMultiLoginSessions: WebIM.config.isMultiLoginSessions
	});
	
	var loading=0;
	
	function login(){
	  if(loading){
	    return false;
	  }
	  loading=1;
	   $('#login').ajaxForm({
	        beforeSubmit:  checkForm,// pre-submit callback
	        success:       complete,// post-submit callback
	        dataType: 'json'
	   });
	   
	    function checkForm(){
	      if(!$.trim ( $('#username').val() )){
	        alert('请填写手机号');
	        return false;
	      }     

	       if(!$.trim ( $('#password').val() )){
	        alert('请填写密码');
	        return false;
	      }

	    }
	    
	    function complete(d){
	      console.log(d);
	        if (!d.error){
	        	var options = { 
	       			  apiUrl: WebIM.config.apiURL,
	       			  user: $.trim ( $('#username').val() ),
	       			  pwd: $.trim ( $('#password').val() ),
	       			  appKey: WebIM.config.appkey,
	       			  success : function(token) {
	       			    var token = token.access_token;
	       				var encryptUsername = WebIM.utils.encrypt($.trim ( $('#username').val() ));
	       		        $.cookie('webim_' + encryptUsername, token, { path: "/"}); 
	       		        $.cookie('hxun', encryptUsername, { path: "/"}); 
	       		        console.log(encryptUsername);
	       		     	window.location.href="__GROUP__/Index/index";
	       		},
      			  error: function error() {
      				 alert("登录失败");
      				 window.location.reload();
      			  }
	       		};
	       		conn.open(options);
	        }else{
	          	alert(d.error);
	          	loading=0;
	        }
	    }
	    
	}
	</script>
	
</if>


</div>
</div>
</div>
</body>
</html>