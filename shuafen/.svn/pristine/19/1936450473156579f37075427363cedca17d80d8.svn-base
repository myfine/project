			function queryOrder(){
				params = {};
				params.weixinorder = $('#weixinorder').val();
			    var url = '__CONTROLLER__/queryOrder';
			    $.post(url, params, function(d){
			      if(d.order == "1"){
			    	  hideDiv();
			    	  alert("支付成功");
			    	  window.location.href="__MODULE__/Me/first";
			      }
			    }, 'json');
			}
    		function zhifu(){
    			var type = $("input[type='radio']:checked").val();
    			if(type == 1){
    				//支付宝支付
    				var money = $.trim ( $('#money').val() );
    				if(!money){
    					alert("请输入金额");
    					return false;
    				}
    				if(money <= 0){
    					alert("输入金额需要大于0");
    					return false;
    				}
                    mytype = $('#mytype').val();
                    if(mytype==1){
                        window.location.href="__MODULE__/Zhifu/toPay/money/" + money;
                    }else{
                        window.location.href="__MODULE__/Zhifu/firstPay/money/" + money;
                    }
    				
    			}else if(type == 2){
    				//微信支付
    				var money = $.trim ( $('#money').val() );
    				if(!money){
    					alert("请输入金额");
    					return false;
    				}
    				if(money <= 0){
    					alert("输入金额需要大于0");
    					return false;
    				}
    				params = {};
    				params.price = money;
                    mytype = $('#mytype').val();
                    if(mytype==1){
                        var url = '__CONTROLLER__/wxpay';
                    }else{
                         var url = '__CONTROLLER__/firstWxpay';
                    }
    			    
    			    $.post(url,params,function(d){
